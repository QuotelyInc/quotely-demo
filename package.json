{
  "name": "tryquotely",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "deploy": "ts-node scripts/claude-deploy.ts",
    "deploy:prod": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:auto": "npm run build && npm run deploy:prod",
    "watch-deploy": "ts-node scripts/watch-and-deploy.ts",
    "claude:setup": "npm run claude:hooks && npm run claude:env",
    "claude:hooks": "mkdir -p .git/hooks && npm run claude:create-hooks",
    "claude:create-hooks": "echo '#!/bin/bash\\ngit push origin master' > .git/hooks/post-commit && chmod +x .git/hooks/post-commit",
    "claude:env": "vercel env pull .env.local",
    "check-branch": "git branch --show-current | grep -q '^master$' || (echo 'Error: Not on master branch!' && exit 1)",
    "sitemap": "node scripts/automated-sitemap-deploy.js",
    "sitemap:generate": "node scripts/automated-sitemap-deploy.js --generate-only",
    "sitemap:validate": "node scripts/automated-sitemap-deploy.js --validate-only",
    "sitemap:deploy": "npm run check-branch && node scripts/automated-sitemap-deploy.js",
    "env:check": "node -e \"const keys=['CLAUDE_API_KEY','GROK_API_KEY','OPENAI_API_KEY','TURBO_RATER_API_KEY','GAIL_API_KEY','MOMENTUM_API_KEY'];keys.forEach(k=>console.log(k+':',(process.env[k]?'✅ Set':'❌ Missing')))\"",
    "env:setup": "cp .env.local.example .env.local && echo '✅ Created .env.local from template. Now add your API keys!'",
    "env:validate": "node -e \"require('./lib/env-validator').logEnvironmentReport()\"",
    "env:health": "curl -s http://localhost:3000/api/health | json_pp",
    "predev": "node -e \"if(!require('fs').existsSync('.env.local')){console.log('⚠️  No .env.local found! Run: npm run env:setup');process.exit(1)}\""
  },
  "dependencies": {
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar": "^4.0.3",
    "critters": "^0.0.23",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.1.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
